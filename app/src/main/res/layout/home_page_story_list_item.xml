<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/hps_flag"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rectangle_tip"
        android:gravity="center"
        android:text="标签"
        android:textColor="@color/green"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hps_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/hps_flag"
        android:text="有一个很长的故事叫山里的故事"
        android:textColor="@color/dark_deep"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/hps_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:text="14:14:11"
        android:textColor="@color/dark_light"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/hps_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hps_title"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:lineSpacingExtra="7dp"
        android:lines="2"
        android:text="从前有座山，山里有座庙，庙里有个老和尚和一个小和尚。老和尚再跟小和尚讲故事：从前有座山，山里有......"
        android:textColor="@color/dark_normal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hps_likeCount"
        android:layout_width="28dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/hps_time"
        android:layout_marginRight="18dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:background="@drawable/rectangle_cnt"
        android:text="1"
        android:textColor="@color/green" />


</RelativeLayout>
