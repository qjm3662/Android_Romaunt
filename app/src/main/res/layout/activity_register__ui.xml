<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/mainBackground"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/register_img"
        android:layout_marginTop="112dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:src="@drawable/logo"
        android:layout_height="56dp"
        />

    <View
        android:layout_marginTop="23dp"
        android:background="@color/gray_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_line" />
    <EditText
        android:id="@+id/register_phone"
        android:background="?attr/loginEditText"
        android:hint="@string/phone_number"
        android:paddingLeft="34dp"
        android:inputType="number"
        android:textColor="@color/dark_normal"
        android:textColorHint="@color/gray_normal"
        android:layout_width="match_parent"
        android:layout_height="55dp" />
    <View
        android:background="@color/gray_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_line" />
    <EditText
        android:id="@+id/register_password"
        android:background="?attr/loginEditText"
        android:hint="@string/input_password"
        android:paddingLeft="34dp"
        android:inputType="textPassword"
        android:textColor="@color/dark_normal"
        android:textColorHint="@color/gray_normal"
        android:layout_width="match_parent"
        android:layout_height="55dp" />
    <View
        android:background="@color/gray_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_line" />

    <Button
        android:id="@+id/register_btn"
        android:layout_marginTop="45dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/button_bg"
        android:textSize="24sp"
        android:text="@string/register"
        android:layout_width="match_parent"
        android:layout_height="51dp" />

    <TextView
        android:layout_gravity="right"
        android:id="@+id/register_to_login"
        android:textColor="@color/dark_deep"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:textSize="19sp"
        android:text="@string/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>