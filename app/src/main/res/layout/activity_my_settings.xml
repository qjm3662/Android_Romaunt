<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myself.settings.my_settings">

    <include layout="@layout/title_bar"/>
    <TextView
        android:id="@+id/t1"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="13dp"
        android:textColor="@color/dark_normal"
        android:text="公开粉丝、关注人"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/l_public"
        android:layout_below="@id/t1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:text="公开"
            android:textColor="@color/dark_deep"
            android:textSize="@dimen/nickname_size" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/img_small_arrow"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/t2"
        android:layout_below="@id/l_public"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="13dp"
        android:textColor="@color/dark_normal"
        android:text="评论、收藏、赞"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/l_notification"
        android:layout_below="@id/t2"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:text="通知"
            android:textColor="@color/dark_deep"
            android:textSize="@dimen/nickname_size" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/img_small_arrow"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/t3"
        android:layout_below="@id/l_notification"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="13dp"
        android:textColor="@color/dark_normal"
        android:text="同步"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/l_wifi_sync"
        android:layout_below="@id/t3"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:text="仅WIFI下自动同步"
            android:textColor="@color/dark_deep"
            android:textSize="@dimen/nickname_size" />
        <Button
            android:id="@+id/my_switch_button_settings"
            android:background="@drawable/img_switch"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_width="42dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/t4"
        android:layout_below="@id/l_wifi_sync"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="13dp"
        android:textColor="@color/dark_normal"
        android:text="其它"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/l_refer"
        android:layout_below="@id/t4"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:text="关于"
            android:textColor="@color/dark_deep"
            android:textSize="@dimen/nickname_size" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/img_small_arrow"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />
    </LinearLayout>
    
    
    <TextView
        android:id="@+id/tv_exit"
        android:text="退出"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/dark_deep"
        android:textSize="@dimen/nickname_size"
        android:layout_marginTop="497dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high" />
</RelativeLayout>
