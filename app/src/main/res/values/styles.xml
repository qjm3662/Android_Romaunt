<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>




    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="android:windowBackground">@color/gray_light</item>

    </style>

    <!--&lt;!&ndash; toolbar标题样式 &ndash;&gt;-->
    <!--<style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">-->
        <!--<item name="android:textSize">24sp</item>-->
        <!--<item name="android:title">登陆</item>-->
    <!--</style>-->

    <style name="myDialogTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="TextViewStyle" parent="TextView.DefaultStyle">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">#26D0EB</item>
    </style>




    <!-- 日间模式 -->
    <style name="AppTheme.day" parent="AppTheme">
        <item name="barBackground">@color/green</item>
        <item name="textColorLight">@color/dark_normal</item>
        <item name="textColorDeep">@color/dark_deep</item>
        <item name="mainBackground">@color/gray_light</item>
        <item name="ListViewBackground">@color/white</item>
        <item name="line_barBackground">@color/white</item>
        <item name="editView">@color/white</item>
        <item name="signInput">@color/blue_light</item>
        <item name="personHomePage">@color/white</item>
        <item name="personHomePage_concern">@color/gray_light</item>
        <item name="title_Text_Color">@color/white</item>
        <item name="user_info_item">@color/white</item>
        <item name="story_info_item">@color/white</item>
        <item name="line_color">@color/gray_normal</item>
        <item name="loginEditText">@color/white</item>
    </style>
    <!-- 夜间模式 -->
    <style name="AppTheme.night" parent="AppTheme">
        <item name="barBackground">#464646</item>
        <item name="textColorLight">@color/gray_light</item>
        <item name="textColorDeep">#dcdcdc</item>
        <item name="mainBackground">#2e2e2e</item>
        <item name="ListViewBackground">#2e2e2e</item>
        <item name="line_barBackground">#464646</item>
        <item name="editView">@color/dark_deep</item>
        <item name="signInput">@color/dark_deep</item>
        <item name="personHomePage">@color/dark_deep</item>
        <item name="personHomePage_concern">@color/dark_normal</item>
        <item name="user_info_item">@color/dark_deep</item>
        <item name="story_info_item">@color/dark_deep</item>
        <item name="line_color">#202020</item>
        <item name="loginEditText">#464646</item>
    </style>




</resources>
